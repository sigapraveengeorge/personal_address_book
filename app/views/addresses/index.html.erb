          <div class="panel panel-default">
            <table class="table">

            <% @addresses.each do |address| %>


              <tr>
                <td class="middle">
                  <div class="media">
                    <div class="media-left">
                      <a href="#">
                        <%= image_tag address.avatar.url(:thumb), class: "media-object", style: "width: 100px;height: 100px;"%>
                        <!-- <img class="media-object" src="http://placehold.it/100x100" alt="..."> -->
                      </a>
                    </div>
                    <div class="media-body">
                      <h4 class="media-heading"><%= address.name %></h4>
                      <address>
                        <strong><%= address.company %></strong><br>
                        <%= address.email %>
                      </address>
                    </div>
                  </div>
                </td>
                <td width="100" class="middle">
                  <div>
                    <!-- edit button in index -->
                    <%= link_to edit_address_path(address), class: "btn btn-circle btn-default btn-xs", title:"Edit" do %> 
                      <i class="glyphicon glyphicon-edit"></i>
                    <% end %>
                    <!-- delete button in index -->
                    <%= link_to address_path(address), :method => :delete, class: "btn btn-circle btn-danger btn-xs", title:"Delete", data: {confirm: "Are you sure ?"} do %> 
                      <i class="glyphicon glyphicon-remove"></i>
                    <% end %>
                  </div>
                </td>
              </tr>

            <% end %>
              <tr>
            </table>            
          </div>

